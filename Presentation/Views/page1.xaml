<UserControl x:Class="ViscoveryDemo.Presentation.Views.page1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViscoveryDemo.Presentation.Views"
             mc:Ignorable="d" Name="userControl"
             Height="1080" Width="1920" Focusable="True"
             d:DesignHeight="1080" d:DesignWidth="1920"
             Background="White">
    <UserControl.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="btn_scan" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver"/>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF1A4AB4"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="textBlock">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF8B8B8B"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle1">
                                                <EasingDoubleKeyFrame KeyTime="0" Value="0.5"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF707070"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="textBlock">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF9E9E9E"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle1">
                                                <EasingDoubleKeyFrame KeyTime="0" Value="0.5"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="rectangle" Fill="#FF2563EB" HorizontalAlignment="Stretch" Margin="0" RadiusY="8" RadiusX="8" VerticalAlignment="Stretch" Width="Auto"/>
                            <Rectangle x:Name="rectangle1" HorizontalAlignment="Left" Height="20" Margin="32,22,0,0" RadiusY="0" RadiusX="0" VerticalAlignment="Top" Width="20">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Presentation/Image/icon-scan.png"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock x:Name="textBlock" Margin="10,10,0,10" TextWrapping="Wrap" Text="Start Scanning" Foreground="White" FontFamily="Arial" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true"/>
                            <Trigger Property="IsMouseOver" Value="true"/>
                            <Trigger Property="IsPressed" Value="true"/>
                            <Trigger Property="IsEnabled" Value="false"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="confirm_btn" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver"/>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF137437"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="textBlock">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF8B8B8B"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle1">
                                                <EasingDoubleKeyFrame KeyTime="0" Value="0.5"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF707070"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle1">
                                                <EasingDoubleKeyFrame KeyTime="0" Value="0.5"/>
                                            </DoubleAnimationUsingKeyFrames>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="textBlock">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF9E9E9E"/>
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="rectangle" Fill="#FF16A34A" HorizontalAlignment="Stretch" Margin="0" RadiusY="8" RadiusX="8" VerticalAlignment="Stretch" Width="Auto"/>
                            <Rectangle x:Name="rectangle1" HorizontalAlignment="Left" Height="24" Margin="32,22,0,0" RadiusY="0" RadiusX="0" VerticalAlignment="Top" Width="14">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Presentation/Image/icon_check.png"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock x:Name="textBlock" Margin="10,10,0,10" TextWrapping="Wrap" Text="Confirm Order" Foreground="White" FontFamily="Arial" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true"/>
                            <Trigger Property="IsMouseOver" Value="true"/>
                            <Trigger Property="IsPressed" Value="true"/>
                            <Trigger Property="IsEnabled" Value="false"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="new_btn" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="rectangle1">
                                                <EasingThicknessKeyFrame KeyTime="0" Value="32,0,0,0"/>
                                            </ThicknessAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.VerticalAlignment)" Storyboard.TargetName="rectangle1">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static VerticalAlignment.Center}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver"/>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF464E59"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="textBlock">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF8B8B8B"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle1">
                                                <EasingDoubleKeyFrame KeyTime="0" Value="0.5"/>
                                            </DoubleAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.VerticalAlignment)" Storyboard.TargetName="rectangle1">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static VerticalAlignment.Center}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="rectangle1">
                                                <EasingThicknessKeyFrame KeyTime="0" Value="32,0,0,0"/>
                                            </ThicknessAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF707070"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle1">
                                                <EasingDoubleKeyFrame KeyTime="0" Value="0.5"/>
                                            </DoubleAnimationUsingKeyFrames>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="textBlock">
                                                <EasingColorKeyFrame KeyTime="0" Value="#FF9E9E9E"/>
                                            </ColorAnimationUsingKeyFrames>
                                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="rectangle1">
                                                <EasingThicknessKeyFrame KeyTime="0" Value="32,0,0,0"/>
                                            </ThicknessAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.VerticalAlignment)" Storyboard.TargetName="rectangle1">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static VerticalAlignment.Center}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="rectangle" Fill="#FF4B5563" HorizontalAlignment="Stretch" Margin="0" RadiusY="8" RadiusX="8" VerticalAlignment="Stretch" Width="Auto"/>
                            <Rectangle x:Name="rectangle1" HorizontalAlignment="Left" Height="24" Margin="32,22,0,0" RadiusY="0" RadiusX="0" VerticalAlignment="Top" Width="16">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Presentation/Image/icon_new.png"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock x:Name="textBlock" Margin="10,10,0,10" TextWrapping="Wrap" Text="New Order" Foreground="White" FontFamily="Arial" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true"/>
                            <Trigger Property="IsMouseOver" Value="true"/>
                            <Trigger Property="IsPressed" Value="true"/>
                            <Trigger Property="IsEnabled" Value="false"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="rootGrid" Opacity="0">
        <Grid.RenderTransform>
            <TranslateTransform Y="30"/>
        </Grid.RenderTransform>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                        To="1" Duration="0:0:0.5"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                        To="0" Duration="0:0:0.5">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                        <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FF111827"/>
                <GradientStop Color="#FF1F2937" Offset="0.5"/>
                <GradientStop Color="#FF111827" Offset="1"/>
                <GradientStop Color="#FF1F2937" Offset="0.25"/>
                <GradientStop Color="#FF1F2937" Offset="0.75"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="100" Margin="0" VerticalAlignment="Top" Width="1920">
            <TextBlock HorizontalAlignment="Left" Margin="220,0,0,0" TextWrapping="Wrap" Text="Prox System" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontWeight="Bold" FontSize="36"/>
            <Rectangle HorizontalAlignment="Left" Height="70" Margin="20,0,0,0" VerticalAlignment="Center" Width="180">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="pack://application:,,,/Presentation/Image/logo-ori.png"/>
                </Rectangle.Fill>
            </Rectangle>        </Grid>
        <Grid HorizontalAlignment="Left" Height="980" Margin="0" VerticalAlignment="Bottom" Width="1920">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="status_grid" HorizontalAlignment="Center" Height="100" Margin="0" VerticalAlignment="Center" Width="1820">
                <Grid x:Name="stanby_grey" Margin="0,10" Visibility="{Binding StandbyVisibility}">
                    <Rectangle x:Name="g" Height="80" VerticalAlignment="Top" Width="1820" Fill="#FF434343" RadiusX="8" RadiusY="8" Margin="0"/>
                    <TextBlock HorizontalAlignment="Left" Margin="40,17.14,0,17.14" TextWrapping="Wrap" Text="Please start scanning..." VerticalAlignment="Center" Foreground="White" FontSize="36" FontFamily="Arial"/>
                </Grid>
                <Grid x:Name="successful_green" Margin="0,10" Visibility="{Binding SuccessVisibility}">
                    <Rectangle x:Name="ge" Height="80" VerticalAlignment="Top" Width="1820" Fill="#FF14532D" RadiusX="8" RadiusY="8"/>
                    <TextBlock HorizontalAlignment="Left" Margin="40,10,0,44.6" TextWrapping="Wrap" Text="Scan Successful" VerticalAlignment="Center" Foreground="White" FontSize="25" FontFamily="Arial"/>
                    <TextBlock HorizontalAlignment="Left" Margin="40,44.6,0,10" TextWrapping="Wrap" Text="3 items detected and processed" VerticalAlignment="Center" Foreground="White" FontSize="25" FontFamily="Arial"/>
                </Grid>
                <Grid x:Name="failed_red" Margin="0,10" Visibility="{Binding FailedVisibility}">
                    <Rectangle x:Name="r" Height="80" VerticalAlignment="Top" Width="1820" Fill="#FF792319" RadiusX="8" RadiusY="8"/>
                    <TextBlock HorizontalAlignment="Left" Margin="40,10,0,44.6" TextWrapping="Wrap" Text="Scan Failed" VerticalAlignment="Center" Foreground="White" FontSize="25" FontFamily="Arial"/>
                    <TextBlock HorizontalAlignment="Left" Margin="40,44.6,0,10" TextWrapping="Wrap" Text="1 items was not detected" VerticalAlignment="Center" Foreground="White" FontSize="25" FontFamily="Arial"/>
                </Grid>
            </Grid>
            <Grid Margin="0,0,0,50" Grid.Row="1" VerticalAlignment="Top" Width="1820" Height="780">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="detected_grid" Margin="0,0,25,0" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Rectangle Fill="#FF2C3A4D" RadiusY="8" RadiusX="8" Grid.RowSpan="2"/>
                    <Rectangle x:Name="Line" Fill="White" HorizontalAlignment="Left" Height="2" Margin="40,0" RadiusY="8" RadiusX="8" VerticalAlignment="Bottom" Width="1116"/>
                    <TextBlock HorizontalAlignment="Left" Margin="40,24.125,0,25.125" TextWrapping="Wrap" Text="Detected Items" VerticalAlignment="Center" Foreground="White" FontSize="25" FontFamily="Arial" FontWeight="Bold"/>
                    <ItemsControl ItemsSource="{Binding Orders}" Margin="0,20" Grid.Row="1" HorizontalAlignment="Center">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="itemRoot" HorizontalAlignment="Left" Height="80" Width="1116" Margin="0,0,0,10" Opacity="0">
                                    <Grid.RenderTransform>
                                        <TranslateTransform X="50"/>
                                    </Grid.RenderTransform>
                                    <Grid.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.3">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Grid.Triggers>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Rectangle Fill="#FF2A2A2A" Margin="0" RadiusY="8" RadiusX="8" Grid.ColumnSpan="4"/>
                                    <TextBlock HorizontalAlignment="Left" Margin="20,16,0,16" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="32" Foreground="White" FontWeight="Bold" Grid.Column="1" Text="{Binding Name}"/>
                                    <TextBlock HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White" FontSize="24" FontWeight="Bold" Grid.Column="2" Text="{Binding Price, StringFormat=C}"/>
                                    <TextBlock HorizontalAlignment="Right" Margin="0,0,10,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Grid.Column="3" Foreground="White" Text="{Binding Status}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="400"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid x:Name="ordered_grid" Height="400" Margin="0" VerticalAlignment="Top" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Rectangle Fill="#FF2C3A4D" RadiusY="8" RadiusX="8" Margin="0" Grid.RowSpan="2"/>
                        <Rectangle x:Name="Line_Copy" Fill="White" Height="2" Margin="40,0" RadiusY="8" RadiusX="8" VerticalAlignment="Bottom"/>
                        <TextBlock HorizontalAlignment="Left" Margin="40,24.125,0,24.125" TextWrapping="Wrap" Text="Order Summary" VerticalAlignment="Center" Foreground="White" FontSize="25" FontWeight="Bold" FontFamily="Arial"/>
                        <Grid Margin="40,10" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock HorizontalAlignment="Left" Margin="0" TextWrapping="Wrap" Text="Subtotal" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="24"/>
                            <TextBlock HorizontalAlignment="Right" Margin="0,23.701" TextWrapping="Wrap" Text="{Binding Subtotal, StringFormat=C}" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="24" Grid.Column="1" FrameworkElement.FlowDirection="RightToLeft"/>
                            <TextBlock HorizontalAlignment="Left" Margin="0,23.701" TextWrapping="Wrap" Text="Tax" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="24" Grid.Row="1"/>
                            <TextBlock HorizontalAlignment="Right" Margin="0,23.701" TextWrapping="Wrap" Text="{Binding Tax, StringFormat=C}" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="24" Grid.Column="1" FrameworkElement.FlowDirection="RightToLeft" Grid.Row="1"/>
                            <TextBlock HorizontalAlignment="Left" Margin="0,23.701" TextWrapping="Wrap" Text="Service Fee" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="24" Grid.Row="2"/>
                            <TextBlock HorizontalAlignment="Right" Margin="0,23.701" TextWrapping="Wrap" Text="{Binding ServiceFee, StringFormat=C}" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="24" Grid.Column="1" FrameworkElement.FlowDirection="RightToLeft" Grid.Row="2"/>
                            <Rectangle x:Name="Line_Copy1" Fill="White" Height="2" Margin="0" RadiusY="8" RadiusX="8" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="3"/>
                            <TextBlock HorizontalAlignment="Left" Margin="0,23.701" TextWrapping="Wrap" Text="Total" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="24" Grid.Row="3"/>
                            <TextBlock HorizontalAlignment="Right" Margin="0,23.701" TextWrapping="Wrap" Text="{Binding Total, StringFormat=C}" VerticalAlignment="Center" Foreground="#FF4ADE80" FontFamily="Arial" FontSize="24" Grid.Column="1" FrameworkElement.FlowDirection="RightToLeft" Grid.Row="3" FontWeight="Bold"/>
                        </Grid>
                    </Grid>
                    <Grid Margin="0,20,0,0" Grid.Row="1">
                        <Button Content="Button" Height="60" Margin="0,0,0.001,0" VerticalAlignment="Top" Width="606.667" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Style="{DynamicResource btn_scan}" Command="{Binding ScanCommand}"/>
                        <Button Content="Button" Height="60" Margin="0,81,0,0" VerticalAlignment="Top" Width="606.667" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Style="{DynamicResource confirm_btn}" Command="{Binding ConfirmCommand}" IsEnabled="{Binding CanConfirm}"/>
                        <Button Content="Button" Height="60" Margin="0,0,0.001,0" VerticalAlignment="Bottom" Width="606.667" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Style="{DynamicResource new_btn}" Command="{Binding NewOrderCommand}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

<Window x:Class="ViscoveryDemo.Presentation.Views.ScanInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scan" Height="150" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
         KeyDown="InputTextBox_KeyDown" Visibility="Visible" Opacity="0" Foreground="{x:Null}">

    <StackPanel Margin="10" Opacity="0">
        <TextBlock Text="Enter order type (1,2,3):" Margin="0,0,0,5"/>
        <TextBox x:Name="InputTextBox" Margin="0,0,0,5"/>
        <TextBlock Text="1=all pass, 2=all fail, 3=partial" Margin="0,0,0,10" FontSize="12"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,5,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>